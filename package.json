{
  "name": "multipack",
  "title": "Multipack",
  "description": "A community of web designers & developers in the West Midlands",
  "author": "Trevor Morris",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^18.11.0"
  },
  "scripts": {
    "build": "eleventy --quiet",
    "watch": "eleventy --quiet --serve",
    "lint:md": "markdownlint *.md",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint src/**/*.css",
    "lint": "npm run lint:md && npm run lint:js && npm run lint:css",
    "debug": "DEBUG=* npx eleventy",
    "prepare": "husky install"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0-canary",
    "browserslist": "^4.21.4",
    "html-minifier": "^4.0.0",
    "lightningcss": "^1.16.0",
    "markdown-it": "^13.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.0",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.25.0",
    "eslint-config-standard": "^17.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/multipack/website.git"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js"
    ],
    "*.css": [
      "npm run lint:css"
    ]
  }
}
