{
  "name": "multipack",
  "title": "Multipack",
  "description": "A community of web designers & developers in the West Midlands",
  "author": "Trevor Morris",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^18.11.0"
  },
  "scripts": {
    "prebuild": "rm -rf _site && mkdir -p _site/assets",
    "build:files": "eleventy --quiet",
    "build:styles": "postcss src/assets/styles/app.css -o _site/assets/styles/app.css --config",
    "build": "npm run build:styles && npm run build:files",
    "watch:files": "eleventy --quiet --serve",
    "watch:styles": "postcss src/assets/styles/app.css -o _site/assets/styles/app.css --config --watch",
    "watch": "npm-run-all --parallel watch:*",
    "lint:markdown": "markdownlint *.md",
    "lint:scripts": "eslint *.js",
    "lint:styles": "stylelint src/**/*.css",
    "lint": "npm-run-all lint:*",
    "debug": "DEBUG=* npx eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "cssnano": "^5.0.9",
    "html-minifier": "^4.0.0",
    "markdown-it": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^10.0.0",
    "postcss-custom-selectors": "^6.0.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-extend-rule": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.0",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.25.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "stylelint": "^14.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/multipack/website.git"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:scripts"
    ],
    "*.css": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ]
    }
  }
}
