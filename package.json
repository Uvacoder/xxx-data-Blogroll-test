{
  "name": "multipack",
  "title": "Multipack Website",
  "description": "Work in progress of getting the Multipack website back up and running.",
  "author": "Trevor Morris",
  "version": "0.0.1",
  "updated": "2019-10-27",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf www && mkdir -p www/assets",
    "build:files": "eleventy --quiet",
    "build:scripts": "rollup --config etc/rollup.config.js",
    "build:styles": "lessc src/assets/styles/style.less www/assets/styles/app.css",
    "build": "npm run build:styles && npm run build:scripts && npm run build:files",
    "watch:files": "eleventy --quiet --serve",
    "watch:scripts": "rollup --config etc/rollup.config.js --watch",
    "watch:styles": "less-watch-compiler src/assets/styles/ www/assets/styles/ app.less",
    "watch": "npm-run-all --parallel watch:*",
    "lint:markdown": "markdownlint src/**/*.md",
    "lint:scripts": "standardx src/**/*.js",
    "lint:styles": "stylelint src/**/*.css",
    "lint": "npm-run-all lint:*",
    "debug": "DEBUG=* npx eleventy"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "color": "^3.1.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.6.0",
    "html-minifier": "^4.0.0",
    "husky": "^3.0.9",
    "json": "^9.0.6",
    "less": "^3.10.3",
    "less-watch-compiler": "^1.14.1",
    "lint-staged": "^9.4.2",
    "lodash": "^4.17.14",
    "markdown-it": "^10.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-attrs": "^3.0.1",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-mentions": "^1.0.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "markdownlint-cli": "^0.19.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-color-mod-function": "^3.0.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-selectors": "^5.1.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-logical": "^4.0.0",
    "postcss-media-minmax": "^4.0.0",
    "push-dir": "^0.4.1",
    "rollup": "^1.26.0",
    "rollup-plugin-terser": "^5.1.2",
    "sanitize-html": "^1.20.1",
    "standard-version": "^7.0.0",
    "standardx": "^5.0.0",
    "string-to-color": "^2.1.1",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "uslug": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/multipack/website.git"
  },
  "lint-staged": {
    "*.(vue|js)": [
      "npm run lint:scripts"
    ],
    "*.(css)": [
      "npm run lint:styles"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ]
    }
  },
  "standard-version": {
    "changelogHeader": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n",
    "infile": "SITE-CHANGELOG.md",
    "scripts": {
      "prebump": "json --in-place -f package.json -e '$date = new Date().toISOString().split(\"T\")[0]; this.updated=$date'"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  }
}
